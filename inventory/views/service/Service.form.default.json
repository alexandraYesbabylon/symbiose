                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "softwares_ids",
                                                "width": "100%",
                                                "label": "Softwares",
                                                "widget": {
                                                    "view": "list.selection",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": false,
                                                            "ACTION.CREATE": false
