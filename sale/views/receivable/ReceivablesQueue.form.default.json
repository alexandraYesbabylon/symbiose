{
    "name": "Receivables Queue",
    "description": "Default form for Receivables Queue",
    "actions" : [
        {
            "id": "action.invoice",
            "label": "Invoice",
            "description": "Invoice all pending receivables of the queue.",
            "controller": "sale_receivablequeue_invoice"
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "Pending receivables",
                        "id": "section.pending_receivables_ids",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "pending_receivables_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.queue-selection",
                                                    "limit": 500,
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": true
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Invoiced receivables",
                        "id": "section.invoiced_receivables_ids",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoiced_receivables_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.queue-selection",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.SELECT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}